        >
          <PanelLeft size={20} className={`transition-transform duration-300 ${isSidebarCollapsed ? 'rotate-180' : ''}`} />
        </button>

        <div className="hidden md:flex items-center gap-1">
          <button className="p-2 text-slate-500 hover:text-slate-900 transition-colors rounded-lg hover:bg-white hover:shadow-sm border border-transparent hover:border-slate-200">
